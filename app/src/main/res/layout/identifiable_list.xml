<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="76dp">
        <!--This is the title text -->
        <TextView
            android:id="@+id/title_expo"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:ems="1"
            android:lineSpacingExtra="40dp"
            android:text="收藏"
            android:textSize="35sp"
            tools:ignore="HardcodedText" />
        <!--This is the title welcome_seal pic-->
        <ImageView
            android:id="@+id/title_seal_pic"
            android:layout_width="35dp"
            android:layout_height="58dp"
            android:layout_below="@id/title_expo"
            android:layout_toRightOf="@id/title_expo"
            android:src="@drawable/welcome_seal"
            tools:ignore="ContentDescription" />
        <!--This is the title background pic-->

        <ListView
            android:id="@+id/listView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_seal_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:divider="#00000000"
            android:dividerHeight="20dp"
            android:focusable="true"
            android:radius="6dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>